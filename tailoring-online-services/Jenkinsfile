pipeline {
    agent any

    tools {
        maven 'mvn'
    }

    environment {
        DOCKER_TOKEN = credentials('docker-token')
        SONARQUBE = 'sonarqube'
        SONAR_TOKEN = credentials('sonar-token')
        GITHUB_CREDS = 'github-credentials'
    }

    stages {
        stage('Checkout Source Code') {
                    steps {
                        script {
                            echo 'Checking out the latest code from GitHub repository...'
                        }
                        git branch: 'main',
                            credentialsId: '8f1de731-7401-44dd-aa00-21e55ee42ab9',
                            url: 'https://github.com/YassineOularbi/FILL-ROUGE-TAILORING-ONLINE.git'
                    }
                }

        stage('Prepare Environment') {
            steps {
                script {
                    echo 'Setting up the Maven environment and initializing project dependencies...'
                }
                dir('tailoring-online-services') {
                   sh 'mvn dependency:resolve'
                   sh 'mvn validate'
                }
            }
        }

        stage('Compile Source Code') {
            steps {
                script {
                    echo 'Compiling source code...'
                }
                dir('tailoring-online-services') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                script {
                    echo 'Running unit tests to ensure code correctness...'
                }
                dir('tailoring-online-services') {
                    sh 'mvn test'
                }
            }
        }

        stage('Integration Tests') {
            steps {
                script {
                    echo 'Running integration tests to validate system behavior...'
                }
                dir('tailoring-online-services') {
                    sh 'mvn integration-test'
                }
            }
        }

        stage('Verify Project') {
            steps {
                script {
                    echo 'Verifying project to ensure all checks are successful...'
                }
                dir('tailoring-online-services') {
                    sh 'mvn verify'
                }
            }
        }

        stage('Package Application') {
            steps {
                script {
                    echo 'Packaging the application for deployment (creating a JAR/WAR file)...'
                }
                dir('tailoring-online-services') {
                    sh 'mvn package'
                }
            }
        }

        stage('Install Package Locally') {
            steps {
                script {
                    echo 'Installing the application into the local Maven repository...'
                }
                dir('tailoring-online-services') {
                    sh 'mvn install'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}